{
    "workbench.editorAssociations": {
        "*.xls": "default",
        "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default",
        "*.cvs": "default"
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "terminal.integrated.inheritEnv": false,
    "workbench.iconTheme": null,
    "workbench.settings.applyToAllProfiles": [],
    "git.autofetch": true,
    "files.exclude": {
        "dist": true,               // dist 폴더 숨기기
        ".cache":true,              // 폴더 숨기기        
        ".conda":true,
        ".config":true,
        ".dotnet":true,
        ".ipython":true,
        ".ipynb_checkpoints":true,
        ".jupyter":true,
        ".local":true,
        ".npm":true,
        ".nv":true,
        ".vscode-server":true,
        ".viminfo":true,
        ".bash_history":true,
        ".bash_logout":true,
        ".bashrc":true,
        ".sqlite_history":true,
        ".wget-hsts":true,
        ".profile":true,
        ".lesshst":true,
        "snap":true,
        ".git": true,               // .git 폴더 숨기기
        "*.log": true,              // 모든 .log 파일 숨기기
        "**/temp*": true,           // temp로 시작하는 모든 폴더/파일 숨기기
        "**/*.bak": true            // .bak 파일 숨기기
    },
    "git.suggestSmartCommit": false,
    "git.ignoreRebaseWarning": true,
    "terminal.integrated.defaultProfile.linux": "JavaScript Debug Terminal"
}